{{ attach_library('nysenate_theme/nysenate-twitter-homepage') }}

<div class="nyesenate-twitter-homepage">
  <div class="nyesenate-twitter-homepage__header">
    <h2 class="nyesenate-twitter-homepage__title">{{ title }}</h2>
    <a href="{{ cta.link }}" class="upcoming-events-link">{{ cta.text }}</a>
  </div>
  <div class="nyesenate-twitter-homepage__items">
    {% for item in items %}
      <div class="item">
        <div class="item-header">
          <span class="date date-display">{{ item.date }}</span>
          <span class="month date-display">{{ item.month }}</span>
        </div>
        <div class="item-content">
          {% for session in item.sessions %}
            <div class="event">
              <h3 class="event-title">
                <a href="{{ session.url }}">{{ session.text }}</a>
              </h3>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
