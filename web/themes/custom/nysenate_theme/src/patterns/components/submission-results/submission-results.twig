{{ attach_library('nysenate_theme/nysenate-tabs') }}
{{ attach_library('nysenate_theme/submission-results') }}

<div class="submissions-content l-row">

  <div class="l-tab-bar">
    <div class="c-tab--arrow u-mobile-only"></div>
    {% for panel in panels %}
      {% if panel.years|length > 0 %}
      <div class="c-tab {% if loop.first %}active{% endif %}">
        <input type="radio" name="language" value="#panel{{ loop.index }}" {% if loop.first %} checked="checked" {% endif %}>
        <label class="c-tab-link">{{ panel.title }}</label>
      </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="tabs-content">
    {% for panel in panels %}
      {% include '@nysenate_theme/submission-results/student-results.twig' with {
        is_bulleted: TRUE,
        title: panel.title,
        years: panel.years,
        filter_item: panel.filter_item
      } only
      %}
    {% endfor %}
  </div>
</div>
