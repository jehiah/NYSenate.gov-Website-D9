{{ attach_library('nysenate_theme/text-layout') }}

<div class="text-layout {% if contents|length > 1 %}text-layout--2-col{% endif %} {% if is_full_bleed %}text-layout--full-bleed{% endif %} {% if with_bg %}text-layout--with-bg{% endif %}">
  <div class="text-layout__container">
    <div class="text-layout__body">
      {% for content in contents %}
        {% if loop.first %}
          <div class="content">
            {% if title %}
              <div class="text-layout__title">
                {{ title }}
              </div>
            {% endif %}
            <div>
              {{ content.text|raw }}
            </div>
          </div>
        {% else %}
          <div class="content">
            {{ content.text|raw }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% if link %}
      <a href="{{ link.url }}" class="c-container--link">{{ link.text }}</a>
    {% endif %}
  </div>
</div>
