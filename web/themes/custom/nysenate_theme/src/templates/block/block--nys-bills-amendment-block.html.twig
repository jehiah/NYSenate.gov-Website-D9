{{ kint(content) }}


<!-- Amendment Tabs -->
{% if content.amendents|length > 1 %}
  <div class="c-bill--amendment-details c-bill-section">
    <div id="amendment-details"></div>
    <h3 class="c-detail--subhead c-detail--section-title">Bill Amendments</h3>


    {#
      There are different sections here for mobile and tablet-plus (desktop), because
      we want mobile only to be overridden with special actions.  Pay attention to what section you are working on.
      They are notated below.
    #}
    {# BEGIN DESKTOP SECTION #}
    <dl class="l-tab-bar u-tablet-plus">
      {% for amendment_id in content.amended_versions %}
        {% set version = amendment_id.title|replace({ (content.session_year ~ '-' ~ content.base_print_no) : ''}) %}
        {% set is_active_version = (version == content.active_version) %}
        {% set is_active_tab = content.bill_wrapper.label() == amendment_id.title %}

        <dd class="c-tab  {{ is_active_tab ? 'active' : '' }}">
          <a class="c-tab-link bill-version-tab"
             data-version="{{ amendment_id.title }}"
             data-target="/node/{{ amendment_id.nid }}">

            {{ version is empty ? "Original" : version }}
            {{ is_active_version ? " (Active) " : "" }}
          </a>
        </dd>
      {% endfor %}
    </dl>
    {# END DESKTOP SECTION #}

    {# BEGIN MOBILE SECTION #}
    <dl class="l-tab-bar u-mobile-only" id="mobile-bill-tab">
      <div class="c-tab--arrow u-mobile-only" id="mobile-bill-arrow"></div>
      {% for amendment_id in content.amended_versions %}
        {% set version = amendment_id.title|replace({ (content.session_year ~ '-' ~ content.base_print_no) : ''}) %}
        {% set is_active_version = (version == content.active_version) %}
        {% set is_active_tab = content.bill_wrapper.label() == amendment_id.title %}
        <dd class="c-tab  {{ is_active_tab ? 'active' : 'inactive' }}">
          <a class="c-tab-link bill-version-tab"
            data-version="{{ amendment_id.title }}"
            data-target="/node/{{ amendment_id.nid }}">

            {{ version is empty ? "Original" : version }}
            {{ is_active_version ? " (Active) " : "" }}
          </a>
        </dd>
      {% endfor %}
    </dl>
   </div>
{% endif %}

<div class="tabs-content">
  {% for amendment in content.amendents %}
    {% set node = amendment.node %}
    {% set is_active_version = node.field_ol_is_active_version.value %}
    <div class="bill-amendment-detail content {{ content.bill_wrapper.label() == node.label() ? ' active' : '' }}" data-version="{{ amendment_id.title }}">
      <!-- Amendment Details -->
      <!-- Quote Block -->
      {# @todo Quote block #}

      <!-- Bill Co/Multi Sponsors -->
      <div class="c-block c-detail--sponsors c-bill-section">
        {% if amendment.sponsors_array.co|length > 1 or amendment.sponsors_array.multi|length > 1 %}
          {% for key,list in amendment.sponsors_array %}
            <div class="c-{{ key }}-sponsors c-sponsors-detail">
              <h3 class="c-detail--subhead c-detail--section-title c-bill-detail--subhead">{{ key }}-Sponsors</h3>
              <div class="initial_{{ key }}-sponsors">
                {% for item in list[0:4] %}
                  {{ item }}
                {% endfor %}
              </div>
              <div class="other_{{ key }}-sponsors">
                <dl class="c-block c-detail--actions accordion" data-accordion>
                  <dd class="accordion-navigation">
                    <a href="#accordion-{{ key }}-sponsors" class="accordion--btn nys-btn-more nys-btn-more--bg" data-open-text="hide additional {{ key }}-sponsors" data-closed-text="view additional {{ key }}-sponsors">
                      view additional {{ key }}-sponsors
                    </a>
                    <div id="accordion-{{ key }}-sponsors" class="content">
                      {% for item in list[4:] %}
                        {{ item }}
                      {% endfor %}
                    </div>
                  </dd>
                </dl>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <!-- Bill Amendment Details -->
      <div class="c-block c-bill-section c-bill--details">
        <h3 class="c-detail--subhead c-detail--section-title">{{ node.title() }} {{ is_active_version ? ' (ACTIVE)' : '' }} - Details</h3>
        <dl>

          {% if content.same_as %}
            {% if content.same_as|count > 1 %}
              <dt>{{ "See other versions of this Bill:"|t }}</dt>
            {% elseif content.same_as.printNo.0|upper == 'S' %}
              <dt>{{ "See Senate Version of this Bill:"|t }}</dt>
            {% elseif content.same_as.printNo.0|upper == 'A' %}
              <dt>{{ "See Assembly Version of this Bill:"|t }}</dt>
            {% else %}
              <dt>{{ "See Version in other house:"|t }}</dt>
            {% endif %}


            {% for bill_id in content.same_as %}
              <dd>
                <a href="/node/{{ bill_id.nid }}">
                  {{ bill_id.basePrintNo }}
                </a>{{ loop.index !== 0 ? ',' : '' }}
              </dd>
            {% endfor %}
          {% endif %}

          {# if ($bill_wrapper->field_ol_latest_status_committee->value()) :
            $term = taxonomy_get_term_by_name($bill_wrapper->field_ol_latest_status_committee->value(), 'committees');
            $path = '';
            if (!empty($term)) {
              $path = drupal_get_path_alias('taxonomy/term/' . reset($term)->tid);
